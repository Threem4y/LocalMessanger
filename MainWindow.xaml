<Window x:Class="LocalWeb.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalWeb"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="500"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ListBox x:Name="MessageListBox"  Grid.Row="0" Grid.Column="1"/>
        <Button x:Name="SendMessageButton" Content="Button"  Grid.Column="0" Click="SendMessageButton_Click"  Grid.Row="1" Margin="0,2,0,0"/>
        <Button x:Name="ExitButton" Content="Button" HorizontalAlignment="Stretch"  Grid.Column="2" VerticalAlignment="Bottom"  Grid.Row="1" Click="ExitButton_Click"/>
        <TextBox x:Name="MessageTextBox" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Bottom" TextChanged="MessageTextBox_TextChanged" Grid.Row="1" Grid.Column="1"/>

    </Grid>
</Window>
